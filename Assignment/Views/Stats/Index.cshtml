@model Stats

@{
    ViewData["Title"] = "Statistics";
}

<div class="text-center">
    <div class="row">
        <div class="col-sm-8 offset-2">
            <h1>Summary of User activity</h1>

            <table class="table table-bordered mt-2 table-striped">
                <thead>
                <tr>
                    <th>User Name</th>
                    <th>Notice Title</th>
                    <th>Hit Count</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var data in Model.Details)
                {
                    <tr>
                        <td>@data.ApplicationUser.UserName</td>
                        <td><a asp-controller="Notice" asp-action="Details" asp-route-id="@data.NoticeId" class="link-info btn">
                            @data.Notice.Title
                        </a></td>
                        <td>@data.HitCount</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>