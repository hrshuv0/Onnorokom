@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Assignment.Data.Static
@inject UserManager<ApplicationUser> _userManager;

@if (!User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark btn btn-outline-success me-2" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
    </li>
}
else
{
    <li class="btn nav-item">@_userManager.GetUserName(User)</li>
    <li class="nav-item">
        <form asp-controller="Auth" asp-action="Logout" method="post">
            <button class="btn btn-outline-danger">Log out</button>
        </form>
    </li>
}

